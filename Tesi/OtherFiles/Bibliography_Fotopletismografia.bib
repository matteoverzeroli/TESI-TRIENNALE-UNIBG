keywords = {Blood pressure,Deep learning,Photoplethysmogram,Regression,Signal processing},
number = {15},
pmid = {31382703},
title = {{Blood pressure estimation from photoplethysmogram using a spectro-temporal deep neural network}},
volume = {19},
year = {2019}
}
